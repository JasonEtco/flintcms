{
  "name": "flintcms",
  "version": "1.1.8",
  "description": "Content-Focused CMS built on Node.js",
  "main": "index.js",
  "repository": "https://github.com/JasonEtco/flintcms",
  "author": "Jason Etcovitch",
  "license": "MIT",
  "engines": {
    "node": "^8.0.0",
    "npm": "^5.0.0"
  },
  "keywords": [
    "cms-framework",
    "nunjucks",
    "templating",
    "mongo",
    "mongodb",
    "cms",
    "documentation",
    "nodejs",
    "react",
    "redux",
    "reactjs",
    "async/await"
  ],
  "scripts": {
    "start": "cross-env DEBUG=flint* nodemon --ignore app dev.js",
    "test": "cross-env DEBUG=none jest",
    "test:coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "test:api": "npm test -- --grep \"GraphQL API\"",
    "test:logs": "npm test -- --grep \"logs app\"",
    "test:site": "npm test -- --grep \"site endpoint\"",
    "test:auth": "npm test -- --grep \"auth endpoint\"",
    "test:admin": "npm test -- --grep \"admin routes\"",
    "test:publicRegistration": "npm test -- --grep \"publicRegistration\"",
    "test:env": "npm test -- --grep \"env\"",
    "test:server": "npm test -- --grep \"server\"",
    "test:compiler": "npm test -- --grep \"Compile templates\"",
    "test:plugin": "npm test -- --grep \"FlintPlugin\"",
    "test:assets": "npm test -- --grep \"assets routes\"",
    "test:firstrun": "npm test -- --grep \"First time install\"",
    "wipe-db": "npm test -- --grep \"First time install\"",
    "build": "rimraf admin && webpack -p --config ./config/webpack.production.config.js --progress --profile --colors",
    "lint": "eslint **/*.js",
    "prepublishOnly": "npm run build"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-devshelf"
    ],
    "rules": {
      "color-named": "always-where-possible",
      "no-descending-specificity": null,
      "declaration-block-semicolon-newline-after": "always-multi-line",
      "declaration-block-single-line-max-declarations": 3,
      "at-rule-empty-line-before": [
        "always",
        {
          "except": [
            "first-nested"
          ]
        }
      ]
    }
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules"
    ]
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "camelcase": "^4.0.0",
    "chalk": "^2.1.0",
    "cheerio": "^0.22.0",
    "chokidar": "^1.7.0",
    "compression": "^1.7.1",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^1.3.2",
    "cross-env": "^5.0.5",
    "debug": "^3.1.0",
    "dotenv": "^4.0.0",
    "express": "^4.15.5",
    "express-graphql": "^0.6.11",
    "graphql": "^0.11.4",
    "html-to-text": "^3.3.0",
    "http-shutdown": "^1.2.0",
    "inky": "^1.3.7",
    "jimp": "^0.2.27",
    "juice": "^4.0.2",
    "latest-version": "^3.1.0",
    "mongoose": "^4.11.13",
    "morgan": "^1.9.0",
    "multer": "^1.3.0",
    "node-sass": "^4.4.0",
    "nodemailer": "^4.0.1",
    "nunjucks": "^3.0.0",
    "nunjucks-date-filter": "^0.1.1",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "rand-token": "^0.3.0",
    "rimraf": "^2.5.4",
    "semver-diff": "^2.1.0",
    "socket.io": "^2.0.1",
    "webpack": "^3.5.6",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.19.1"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "axios": "^0.16.2",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "chunk-manifest-webpack-plugin": "^1.1.2",
    "classnames": "^2.2.5",
    "codemirror": "^5.29.0",
    "copy-webpack-plugin": "^4.0.1",
    "coveralls": "^2.13.1",
    "css-loader": "^0.28.7",
    "draft-js": "^0.10.2",
    "draft-js-export-html": "^1.1.0",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-import-resolver-webpack": "^0.8.3",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "form-serialize": "^0.7.2",
    "history": "^4.7.2",
    "html-webpack-plugin": "^2.30.1",
    "img-loader": "^2.0.0",
    "immutability-helper": "^2.3.1",
    "jest": "^22.0.4",
    "moment": "^2.18.1",
    "nodemon": "^1.12.1",
    "nyc": "^11.2.1",
    "postcss-loader": "^2.0.6",
    "prop-types": "^15.5.10",
    "react": "^16.0.0",
    "react-codemirror": "^1.0.0",
    "react-color": "^2.13.8",
    "react-dnd": "^2.5.1",
    "react-dnd-html5-backend": "^2.5.1",
    "react-dom": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "react-router-redux": "^5.0.0-alpha.6",
    "react-rte": "^0.15.0",
    "react-transform-hmr": "^1.0.4",
    "react-transition-group": "^2.2.0",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "socket.io-client": "^2.0.3",
    "style-loader": "^0.18.2",
    "stylelint": "^8.0.0",
    "stylelint-config-devshelf": "^1.3.0",
    "stylelint-order": "^0.6.0",
    "stylelint-scss": "^1.5.1",
    "supertest": "^3.0.0",
    "test-selector": "^1.0.1",
    "url-loader": "^0.5.9",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-chunk-hash": "^0.4.0"
  }
}
